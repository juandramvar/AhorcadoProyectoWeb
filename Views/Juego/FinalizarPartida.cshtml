@{
    ViewBag.Title = "Resultado";
    var uid = ViewBag.UltUsuarioId as int?;
    var dif = ViewBag.UltDificultad as int?;
}

<h2>Resultado</h2>

@if (TempData["JuegoOk"] != null)
{
    <div class="alert alert-info">@TempData["JuegoOk"]</div>
}
else
{
    <div class="alert alert-secondary">No hay resultado reciente.</div>
}

<div class="d-flex gap-2 mt-3">
    @if (uid.HasValue && dif.HasValue)
    {
        <a class="btn btn-primary" href="@Url.Action("Partida","Juego", new { usuarioId = uid.Value, dificultad = dif.Value })">Nuevo juego</a>
    }
    else
    {
        <a class="btn btn-primary" href="@Url.Action("IniciarJuego","Juego")">Nuevo juego</a>
    }
    <a class="btn btn-secondary" href="@Url.Action("VerEscalafon","Escalafon")">Ver escalafón</a>
    <a class="btn btn-light" href="@Url.Action("Index","Home")">Volver al inicio</a>
</div>
