@{
    ViewBag.Title = "Diccionario - Agregar Palabra";
}

<h2 class="mb-3">Agregar palabra al diccionario</h2>

@if (TempData["DiccionarioOk"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DiccionarioOk"]
    </div>
}

@using (Html.BeginForm("AgregarPalabra", "Diccionario", FormMethod.Post, new { @class = "mt-3" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="texto">Nueva palabra</label>
        @Html.TextBox("texto", null, new
        {
            @class = "form-control",
            placeholder = "Ej: árbol, nación, ñandú…",
            maxlength = "10",                         // límite visual
            required = "required",
            autocomplete = "off",
            pattern = "[A-Za-zÁÉÍÓÚÜÑáéíóúüñ]{5,10}", // 5–10 letras (aprox en HTML)
            title = "Solo letras (admite tildes, ü y ñ). Longitud: 5–10. Sin espacios ni símbolos."
        })
        @Html.ValidationMessage("texto", "", new { @class = "text-danger" })
        <small class="form-text text-muted">Solo letras (tildes, ü y ñ). Longitud: 5–10. Sin espacios.</small>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index","Home")">Volver al inicio</a>
        <a class="btn btn-outline-info" href="@Url.Action("Estado","Diccionario")">Ver estado</a>
    </div>
}
