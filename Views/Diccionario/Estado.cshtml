@model AhorcadoProyectoWeb.Models.DiccionarioEstadoViewModel
@{
    ViewBag.Title = "Estado del Diccionario";
}

<h2 class="mb-3">Estado del Diccionario</h2>

@if (Model.TotalPalabras == 0)
{
    <div class="alert alert-info">Aún no hay palabras en el diccionario.</div>
}
else
{
    <div class="mb-3">
        <div><strong>Total de palabras:</strong> @Model.TotalPalabras</div>
        <div>
            <strong>Con tilde (á/é/í/ó/ú):</strong>
            @Model.ConTilde (@Model.PorcentajeTilde.ToString("0.0")%) —
            @(Model.CumpleTilde ? "✅ Cumple (≥ 50%)" : "❌ No cumple (< 50%)")
        </div>
        <div>
            <strong>Case-insensitive:</strong> @(Model.CaseInsensitiveOK ? "✅ OK (Canon en minúsculas)" : "❌ Revisar")
        </div>
    </div>

    <h4>Mínimo 3 palabras por letra inicial</h4>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Letra</th>
                <th>Cantidad</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Letras)
            {
                var cls = item.Cumple ? "table-success" : "table-warning";
                <tr class="@cls">
                    <td>@item.Letra</td>
                    <td>@item.Cantidad</td>
                    <td>@(item.Cumple ? "✅ ≥ 3" : "⚠️ < 3")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <strong>Resultado global:</strong>
        @if (Model.TodoOk)
        {
            <span class="text-success">✅ El diccionario cumple los requisitos.</span>
        }
        else
        {
            <span class="text-danger">❌ El diccionario aún no cumple todos los requisitos.</span>
        }
    </div>
}

<div class="d-flex gap-2 mt-3">
    <a class="btn btn-secondary" href="@Url.Action("Index","Home")">Volver al inicio</a>
    <a class="btn btn-outline-primary" href="@Url.Action("AgregarPalabra","Diccionario")">Agregar palabra</a>
</div>
